<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_avatar_round"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="User name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="+1 524 336 7654"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingEnd="20dp"/>

       <LinearLayout
           android:background="@color/purple_200"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="40dp"
           android:orientation="vertical"
           android:padding="15dp">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">

              <ImageView
                  android:layout_width="40dp"
                  android:id="@+id/darkmodeicon"
                  android:layout_height="40dp"
                  android:src="@drawable/dark_mode_6682"
                  android:background="@drawable/round_back_night_mode"
                  android:padding="12dp"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_centerVertical="true"
                  android:paddingStart="10dp"

                  android:text="Night Mode"
                  android:textColor="#FFFFFF"
                  android:textStyle="bold"
                  android:layout_toEndOf="@+id/darkmodeicon"/>
              <androidx.appcompat.widget.SwitchCompat

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_centerVertical="true"
                  android:switchMinWidth="60dp"
                  android:theme="@style/nightModeSwitch"/>

          </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">

               <ImageView
                   android:layout_width="40dp"
                   android:id="@+id/notificationicon"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_notification"
                   android:background="@drawable/round_back_notifications"
                   android:padding="12dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                   android:paddingStart="10dp"
                   android:text="Notifications"
                   android:textColor="#FFFFFF"
                   android:textStyle="bold"
                   android:layout_toEndOf="@+id/notificationicon"/>
               <androidx.appcompat.widget.SwitchCompat

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:switchMinWidth="50dp"
                   android:theme="@style/notificationSwitch"/>

           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">

               <ImageView
                   android:layout_width="40dp"
                   android:id="@+id/privateaccounticon"
                   android:layout_height="40dp"
                   android:src="@drawable/delete_user_icon"
                   android:background="@drawable/round_back_private_account"
                   android:padding="12dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                   android:paddingStart="10dp"
                   android:text="Delete Account"
                   android:textColor="#FFFFFF"
                   android:textStyle="bold"
                   android:layout_toEndOf="@+id/privateaccounticon"/>
               <androidx.appcompat.widget.SwitchCompat

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_centerVertical="true"
                   android:switchMinWidth="50dp"
                   android:theme="@style/privateaccountSwitch"/>

           </RelativeLayout>
       </LinearLayout>

        <LinearLayout
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mobile_rotate_rotation_icon"
                    android:background="@drawable/round_back_night_mode"
                    android:padding="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="139dp"
                    android:text="Change orientation"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:switchMinWidth="50dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/b"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/messageusicon"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_message"
                    android:background="@drawable/round_back_notifications"
                    android:padding="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="Send Us Message"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/messageusicon"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_right_24"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/faqicon"
                    android:layout_height="40dp"
                    android:src="@drawable/faq_icon"
                    android:background="@drawable/round_back_private_account"
                    android:padding="12dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:text="FAQ'S"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/faqicon"/>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_right_24"/>

            </RelativeLayout>

        </LinearLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="LogOut"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@color/black"
        />


</LinearLayout>
    </ScrollView>
</LinearLayout>
